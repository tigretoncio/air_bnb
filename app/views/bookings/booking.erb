<h1 style="margin-top:5px">Booking</h1>
<br><br>
<div align="center">
  <h3><%=@booking.space.name%></h3>
  <h5><%=@booking.user.name%></h5>
  <h6><%=@booking.space.description%></h6>
  <h7>Â£<%=@booking.space.price%>per night</h7>
  <br>
  <h8><%=@booking.date%></h8>
  <br>
  <h10><%=@booking.status.capitalize%></h10>
  <br>
  <br>
  <% if @booking.status != "confirmed" %>
    <form action="/bookings/<%=@booking.id%>/confirmed" method="post">
      <input id="confirm" class="go_button" type="submit" value="Confirm"/>
    </form>
  <% end %>
  <form action="/bookings/<%=@booking.id%>/denied" method="post">
    <input style="background-color:#808080" class="go_button" type="submit" value="Deny"/>
  </form>
  <br>
  <div align="center">Other Bookings
    <% @other_bookings.each do |other_booking| %>
      <table class="normal">
        <tr>
          <td class="ellipsis"><%=other_booking.date%></td>
          <td></td>
        </tr>
        <tr>
          <td><%=other_booking.user.name%></td>
          <td><a href="/bookings/<%=other_booking.id%>">...More</a></td>
        </tr>
        <tr>
          <td class="ellipsis"><%=other_booking.status.capitalize%></td>
         <td></td>
        </tr>
        <br>
      </table>
    <% end %>
  </div>
</div>
